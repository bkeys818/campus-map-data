{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "properties": {
        "version": { "const": "v0.1-alpha" },
        "locations": {
            "type": "array",
            "items": { "$ref": "#/definitions/Location" },
            "minItems": 1,
            "uniqueItems": true
        }
    },
    "additionalProperties": false,
    "required": ["version", "locations"],
    "definitions": {
        "Location": {
            "type": "object",
            "properties": {
                "region": {
                    "type": "object",
                    "description": "A rectangular geographic region centered around a specific latitude and longitude.",
                    "properties": {
                        "center": { "$ref": "#/definitions/Coordinate" },
                        "lat-meters": {
                            "description": "The north-to-south span of the region (measured in meters) specified as the distance from the center point to the bounds along the north-to-south axis.",
                            "type": "number"
                        },
                        "lng-meters": {
                            "description": "The east-to-west span of the region (measured in meters) specified as the distance from the center point to the bounds along the east-to-west axis.",
                            "type": "number"
                        }
                    },
                    "required": ["center", "lat-meters", "lng-meters"],
                    "additionalProperties": false
                },
                "places": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": { "type": "string" },
                            "desc": { "type": "string" },
                            "type": { "enum": ["dining", "housing", "hall", "athletics", "parking", "landmark", "other"] },
                            "id": {
                                "type": "string",
                                "format": "uuid"
                            },
                            "coordinate": { "$ref": "#/definitions/Coordinate" },
                            "address": {
                                "type": "object",
                                "properties": {
                                    "street": { "type": "string" },
                                    "street2": { "type": "string" },
                                    "city": { "type": "string" },
                                    "state": { "type": "string" },
                                    "zip": {
                                        "type": "integer",
                                        "pattern": "\\d{5}"
                                    },
                                    "country": { "type": "string" }
                                },
                                "additionalProperties": false,
                                "required": ["street", "city", "state", "zip", "country"]
                            },
                            "querys": {
                                "type": "array",
                                "description": "A list of strings that when searched will bring up this place. Properties `name` and `type` (unless \"other\") are automatically included.",
                                "items": {
                                    "type": "string"
                                },
                                "uniqueItems": true,
                                "minItems": 1
                            },
                            "url": {
                                "type": "string"
                            },
                            "subplaces": {
                                "type": "array",
                                "allOf": [
                                    { "$ref": "#/definitions/Subplace" },
                                    { "$ref": "#/definitions/Restaurant" },
                                    { "$ref": "#/definitions/Office" },
                                    { "$ref": "#/definitions/Restroom" }
                                ],
                                "minItems": 1,
                                "uniqueItems": true
                            }
                        },
                        "additionalProperties": false,
                        "required": ["name", "id" ,"coordinate"]
                    },
                    "minItems": 1,
                    "uniqueItems": true
                }
            },
            "required": ["region"],
            "additionalProperties": false
        },
        "Coordinate": {
            "type": "object",
            "description": "The latitude and longitude associated with a location, specified using the WGS 84 reference frame.",
            "properties": {
                "lat": {
                    "description": "The latitude of the coordinate",
                    "type": "number"
                },
                "lng": {
                    "description": "The longitude of the coordinate",
                    "type": "number"
                }
            },
            "required": ["lat", "lng"],
            "additionalProperties": false
        },
        "Schedule": {
            "type": "array",
            "items": {
                "Schedule-Component": {
                    "type": "object",
                    "properties": {
                        "days": {
                            "description": "All of the days of the week that `time-ranges` applies to. Default value",
                            "type": "array",
                            "items": {
                                "day": {
                                    "enum": ["sun", "mon", "tue", "wed", "thu", "fri", "sat"]
                                }
                            },
                            "default": ["sun", "mon", "tue", "wed", "thu", "fri", "sat"],
                            "minItems": 1,
                            "uniqueItems": true
                        },
                        "time-ranges": {
                            "type": "array",
                            "items": {
                                "time-range": {
                                    "type": "string",
                                    "format": "\\d{2}:\\d{2}-\\d{2}:\\d{2}"
                                }
                            },
                            "default": ["00:00-24:00"],
                            "minItems": 1,
                            "uniqueItems": true
                        }
                    },
                    "additionalProperties": false,
                    "minProperties": 1
                }
            },
            "uniqueItems": true,
            "minItems": 1
        },
        "Subplace": {
            "type": "object",
            "properties": {
                "type":  { "type": "string" },
                "name":  { "type": "string" },
                "room-number": {
                    "type": "string",
                    "pattern": "[a-zA-Z0-9]+"
                }
            },
            "required": ["type"]
        },
        "Restaurant": {
            "type": "object",
            "allOf": [ { "$ref": "#/definitions/Subplace" } ],
            "properties": {
                "type": { "const": "restaurant" },
                "description": { "type": "string" },
                "schedule": { "$ref": "#/definitions/Schedule" }
            },
            "additionalProperties": false,
            "required": ["type", "name"]
        },
        "Office": {
            "type": "object",
            "allOf": [ { "$ref": "#/definitions/Restaurant" } ],
            "properties": {
                "type": { "const": "office" },
                "phone": { "type": "string" },
                "email": { "type": "string" },
                "url": { "type": "string" }
            },
            "additionalProperties": false,
            "required": ["type", "name"]
        },
        "Restroom": {
            "type": "object",
            "allOf": [ { "$ref": "#/definitions/Subplace" } ],
            "properties": {
                "type": { "const": "restroom" },
                "sex": { "enum": ["male", "female", "unisex", "family" ] }
            },
            "additionalProperties": false,
            "required": ["type", "sex"]
        }
    }
}